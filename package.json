{
  "name": "moviefinder.app",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "backend": "bun start",
    "build": "vite build",
    "format": "bun x sort-package-json && prettier --write \"src/**/*.{js,jsx,ts,tsx,css,md,json}\"",
    "frontend": "vite",
    "kp": "bun x kill-port 3000",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "bun install && bun run build && bun start",
    "docker": "docker build --platform linux/amd64 --no-cache -t moviefinder-app-react . && docker run --platform linux/amd64 -p 3000:3000 moviefinder-app-react",
    "start": "bun --hot ./src/backend.ts",
    "tc": "tsc --watch --noEmit",
    "viz-bundle": "bun x vite-bundle-visualizer"
  },
  "prettier": {
    "bracketSpacing": true,
    "plugins": [
      "prettier-plugin-tailwindcss"
    ],
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  },
  "dependencies": {
    "@electric-sql/pglite": "^0.3.0",
    "@electric-sql/pglite-repl": "^0.2.19",
    "@faker-js/faker": "^9.7.0",
    "@trpc/client": "^11.0.0-rc.833",
    "@trpc/server": "^11.0.0-rc.833",
    "blinkdb": "^0.14.0",
    "lru-cache": "^11.1.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "swiper": "^11.2.6",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.6",
    "@types/bun": "^1.2.5",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.4.1",
    "babel-plugin-react-compiler": "^19.1.0-rc.2",
    "eslint-plugin-react-hooks": "^6.0.0-rc.1",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^4.1.6",
    "typescript": "^5.8.2",
    "vite": "^6.3.5",
    "vite-plugin-pwa": "^1.0.0",
    "vite-tsconfig-paths": "^5.1.4"
  }
}